<% @title = "Admin" %>

<h2>Admin</h2>
<h3>New Post</h3>
<form action="/new_post" method="post">
	<fieldset>
		<label for="title">Title</label>
		<input type="text" name="title" id="title" />
	</fieldset>
	<fieldset>
		<label for="body">Body</label>
		<textarea name="body" id="body" cols="40" rows="12"></textarea>
	</fieldset>
	<input type="image" src="/images/submit.gif" value="Create" />
</form>